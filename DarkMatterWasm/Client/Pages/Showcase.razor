               {

                   Source = "...First Slide",

                   Alt = "First Slide",

                   Caption = "Slide 1",

                   Header = "Slide 1 Header"

               },

               new Item
               {

                   Source = "...Second Slide",

                   Alt = "Second Slide",

                   Caption = "Slide 2",

                   Header = "Slide 2 Header"

               },

               new Item
               {

                   Source = "...Third Slide",

                   Alt = "Third Slide",

