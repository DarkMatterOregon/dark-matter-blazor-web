@page "/showcase"
@using System.IO
@using System.Reflection
@using System.Text
@using System.Collections;
@using System.IO;


<h1 style="margin-left: 5rem;">Showcase</h1>
<Carousel >
    @foreach (var item in items)
    {
        <CarouselSlide Name="1">
            <Image Source="@item.Source" Text="City Skyline" Display="Display.Block" Style="width: 100%;" />
        </CarouselSlide>
    }

</Carousel>

